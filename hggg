<script>
  // Elements References
  const fileInput = document.getElementById('file-input');
  const scanButton = document.getElementById('scan-button');
  const scanResults = document.getElementById('scan-results');
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const sidebar = document.querySelector('aside.sidebar');
  const navItems = sidebar.querySelectorAll('nav ul li');

  // Show/hide sidebar on mobile
  mobileMenuToggle.addEventListener('click', () => {
    const isShown = sidebar.classList.toggle('show');
    mobileMenuToggle.setAttribute('aria-expanded', isShown ? 'true' : 'false');
  });

  // Enable/disable scan button based on file input
  fileInput.addEventListener('change', () => {
    scanButton.disabled = !fileInput.files.length;
    scanButton.setAttribute('aria-disabled', (!fileInput.files.length).toString());
  });

  // Dummy malware signature database for demo
  const malwareSignatures = [
    'evil.exe',
    'badfile.dll',
    'trojan.bat',
    'virus.txt',
    'worm.scr',
  ];

  // Simulated scan function with delay and results
  function scanFiles(files) {
    scanResults.textContent = 'Scanning files... Please wait.';
    scanButton.disabled = true;
    scanButton.setAttribute('aria-disabled', 'true');

    return new Promise(resolve => {
      setTimeout(() => {
        const infectedFiles = [];
        for (const file of files) {
          if (malwareSignatures.includes(file.name.toLowerCase())) {
            infectedFiles.push(file.name);
          }
        }
        resolve(infectedFiles);
      }, 1800);
    });
  }

  // Display scan results
  function displayResults(infectedFiles) {
    if (infectedFiles.length === 0) {
      scanResults.innerHTML = '<strong>No malware found.</strong> Your files are clean.';
    } else {
      const listItems = infectedFiles.map(f => `<li>${f}</li>`).join('');
      scanResults.innerHTML = `<strong>Malware detected in the following files:</strong><ul>${listItems}</ul>
        <p>Files have been quarantined successfully.</p>`;
    }
  }

  // Scan button click handler
  scanButton.addEventListener('click', async () => {
    if(fileInput.files.length === 0) return;
    try {
      scanResults.textContent = '';
      const infectedFiles = await scanFiles(fileInput.files);
      displayResults(infectedFiles);
    } catch (e) {
      scanResults.textContent = 'An error occurred during scanning. Please try again.';
    } finally {
      scanButton.disabled = false;
      scanButton.setAttribute('aria-disabled', 'false');
    }
  });

  // Keyboard accessibility for nav items
  navItems.forEach((item) => {
    item.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        navItems.forEach(i => i.classList.remove('active'));
        item.classList.add('active');
      }
    });
    item.addEventListener('click', () => {
      navItems.forEach(i => i.classList.remove('active'));
      item.classList.add('active');
    });
  });
</script>
</body>
